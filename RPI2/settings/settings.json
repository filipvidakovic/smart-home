{
    "device": {
        "pi_id": "PI2",
        "device_name": "RaspberryPi_Kitchen",
        "location": "Building_A_Floor_1",
        "description": "Kitchen monitoring device"
    },
    "mqtt": {
        "broker": "localhost",
        "port": 1883,
        "client_id": "PI2_client",
        "topics": {
            "temperature": "sensors/temperature",
            "motion": "sensors/motion",
            "distance": "sensors/distance",
            "membrane": "sensors/membrane",
            "door_status": "sensors/door_status"
        },
    "batch_size": 5,
    "batch_interval": 10
    },
    "   DS2": {
        "simulated": true,
        "pin": 5,
        "led_pin": 6
    },
    "   DUS2": {
        "simulated": true,
        "trigger_pin": 7,
        "echo_pin": 8
    },
    "   DPIR2": {
        "simulated": true,
        "pin": 9
    },
    "   4SD": {
        "simulated": true,
        "pin": 10
        //TODO dodaj vise pinova
    },
    "   BTN": {
        "simulated": true,
        "pin": 11
    },
    "   DHT3": {
        "simulated": true,
        "pin": 12
    },
    "   GSG": {
        "simulated": true,
        "pin": 13
    }


}